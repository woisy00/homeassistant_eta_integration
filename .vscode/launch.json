    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch Home Assistant (dev)",
            "program": "${workspaceFolder}/.venv/bin/hass",
            "args": [
                "--config",
                "${workspaceFolder}/config",
                "--debug"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/custom_components"
            },
            "console": "integratedTerminal"
        }
    ]
}